<div class="index">
  <div>
    <div class="row">
    <div class="col-xs-12 col-sm-4">
      <%= simple_form_for :search, url: restaurants_path, method: :get do |f| %>
        <%= f.input :food_styles, label: "Food Style",  collection: $food_styles, as: :select %>
        <%= f.input :atmospheres, label: "Atmosphere", collection: $atmospheres, as: :select  %>
        <%= f.input :areas, label: "Neighborhood", collection: $areas, as: :select  %>
        <%= f.input :food_philosophys, label: "Food Philosphy", collection: $food_philosophys, as: :select  %>
        <%= f.input :extras, label: "Extras", collection: $extras, as: :select  %>
        <%= f.input :suitable_fors, label: "Suitable for", collection: $suitable_fors, as: :select %>
        <%= f.submit "Search", class: "btn btn-primary m" %>
        <%= link_to "Reset", restaurants_path  %>
      <% end %>
    </div>
  </div>

    <div class="header">
      <h3>Discover</h3>
    </div>
    <div class="search">
      <%= render "components/search_bar" %>
    </div>

  <ul class= "restaurantlist">
    <%@restaurants.each do |restaurant| %>
      <%= link_to restaurant_path(restaurant) do %>
        <div class="card-trip">
            <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/dinner.jpg" />
            <div class="card-trip-infos">
              <div>
                <h2><strong><%=restaurant.name%></strong></h2>
                  <li class="sc-italics">
                    <%= restaurant.food_style_list%> |
                    <%= restaurant.atmosphere_list %> |
                    <%= restaurant.food_philosophy_list %> |
                    <%= restaurant.extra_list %> |
                    <%= restaurant.suitable_for_list %>

                  </li>
                <p class="star"><%= image_tag("star_full.png", style: 'height:16px;') * restaurant.user_rating %><%= image_tag("star_empty.png", style: 'height:16px;') * (5 - restaurant.user_rating) %></p>
              </div>
            </div>
        </div>
      <% end %>
    <% end %>
  </ul>

  <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>

