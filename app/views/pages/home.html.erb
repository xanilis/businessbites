<h1>Welcome</h1>

<h3>Please choose a date</h3>

<hr>

<p>We want to make sure that we show you only available restaurnts.</p>

<div class="container-form-date">
  <%= simple_form_for restaurants_path, method: :get do |f| %>
    <%= f.input :date, html5:true, as: :date%>
    <%= link_to 'Skip this', restaurants_path %>
    <%= f.button :submit, 'Confirm Date' %>
  <% end %>
</div>

